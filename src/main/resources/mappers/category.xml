<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.zhgxun.talk.dao.CategoryDao">
    <!--
        相同的字段属性可以定义为SQL语句的一部分
    -->
    <sql id="columns">
        id,
        parent_id as "parentId",
        `name`
    </sql>

    <insert id="add" useGeneratedKeys="true" keyColumn="id" keyProperty="id"
            parameterType="com.github.zhgxun.talk.entity.CategoryEntity">
        INSERT INTO `category`(`parent_id`, `name`, `creator`, `updater`, `create_time`, `update_time`)
        VALUES (#{parentId}, #{name}, #{creator}, #{updater}, #{createTime}, #{updateTime})
    </insert>

    <select id="findOne" resultType="com.github.zhgxun.talk.entity.CategoryEntity">
        SELECT
        <include refid="columns"/>
        FROM category
        WHERE id = #{id}
    </select>

    <select id="any" resultMap="map">
        SELECT
        <include refid="columns"/>
        FROM category
    </select>
</mapper>